<%= turbo_stream.update "invite_result" do %>
  <div class="bg-green-50 border border-green-300 rounded-lg p-6">
    <h3 class="text-lg font-medium text-green-800 mb-2">âœ“ Invitation Created!</h3>
    <p class="text-sm text-green-700 mb-4">Send this link to <strong><%= @invitation.email %></strong>:</p>
    <div class="flex gap-2">
      <input type="text" 
             value="<%= @invite_url %>" 
             readonly 
             id="invite-link"
             class="flex-1 p-3 border border-green-300 rounded-md bg-white text-sm font-mono">
      <button onclick="navigator.clipboard.writeText(document.getElementById('invite-link').value); this.textContent = 'Copied!'; setTimeout(() => this.textContent = 'Copy', 2000)"
        class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">
        Copy
      </button>
    </div>
    <p class="text-xs text-green-600 mt-3">Link expires in 48 hours.</p>
  </div>
<% end %>
<%= turbo_stream.replace "invitation_form" do %>
  <%= form_with model: Invitation.new, url: admin_invitations_path, id: "invitation_form", class: "space-y-6" do |f| %>
    <div>
      <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, required: true,
          placeholder: "admin@example.com",
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2 border" %>
    </div>
    <div class="flex gap-4">
      <%= f.submit "Create Invitation", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancel", admin_invitations_path, class: "px-4 py-2 text-gray-600 hover:text-gray-800" %>
    </div>
  <% end %>
<% end %>
