<div class="bg-slate-900/80 backdrop-blur-xl shadow-2xl shadow-blue-500/5 rounded-2xl p-8 border border-slate-800/50">
  <div class="flex justify-center">
    <div class="w-72 bg-linear-to-br  rounded-xl flex items-center justify-center">
      <%= image_tag "logo.svg", alt: "Logo", class: "filter invert" %>
    </div>
  </div>
  <h1 class="text-2xl font-bold text-white mb-2 text-center">Welcome back</h1>
  <p class="text-slate-400 text-sm text-center mb-8">Sign in to your admin account</p>
  <%= form_with url: admin_login_path, class: "space-y-5" do |f| %>
    <div>
      <%= f.label :email, "Email", class: "block text-sm font-medium text-slate-300 mb-2" %>
      <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email",
          placeholder: "admin@example.com",
          class: "block w-full rounded-xl bg-slate-800/50 border border-slate-700/50 text-white placeholder-slate-500 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500/40 focus:border-blue-500/40 transition-all duration-200" %>
    </div>
    <div>
      <%= f.label :password, "Password", class: "block text-sm font-medium text-slate-300 mb-2" %>
      <%= f.password_field :password, required: true, autocomplete: "current-password",
          placeholder: "••••••••",
          class: "block w-full rounded-xl bg-slate-800/50 border border-slate-700/50 text-white placeholder-slate-500 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500/40 focus:border-blue-500/40 transition-all duration-200" %>
    </div>
    <div class="pt-2">
      <%= f.submit "Sign in", class: "w-full py-3 px-4 rounded-xl text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-500 hover:to-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-500/40 focus:ring-offset-2 focus:ring-offset-slate-900 cursor-pointer transition-all duration-200 shadow-lg shadow-blue-500/25 hover:shadow-blue-500/40 hover:scale-[1.02] active:scale-[0.98]" %>
    </div>
  <% end %>
  <div class="mt-6 text-center">
    <%= link_to "Forgot your password?", new_admin_password_path, class: "text-sm text-slate-400 hover:text-blue-400 transition-colors duration-200" %>
  </div>
</div>
<p class="text-center text-slate-600 text-xs mt-8">Protected admin area</p>
