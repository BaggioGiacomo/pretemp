<%= turbo_stream.append "modals" do %>
  <div class="fixed inset-0 z-50 overflow-y-auto" 
       data-controller="modal"
       data-action="keydown.esc@window->modal#close">
    <div class="fixed inset-0 bg-gray-500/75 backdrop-blur-sm transition-opacity"
         aria-hidden="true"
         data-action="click->modal#close"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4 pointer-events-none">
      <div class="bg-white rounded-lg p-6 max-w-lg w-full shadow-xl relative pointer-events-auto" 
           data-modal-target="content">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-medium text-gray-900">Password Reset Link</h3>
          <button data-action="click->modal#close" class="text-gray-400 hover:text-gray-600 cursor-pointer">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <p class="text-sm text-gray-600 mb-4">Send this link to <strong><%= @user.email_address %></strong>:</p>
        <div class="flex gap-2">
          <input type="text" 
                 value="<%= @reset_url %>" 
                 readonly 
                 id="reset-link-<%= @user.id %>"
                 class="flex-1 p-3 border border-gray-300 rounded-md bg-gray-50 text-sm font-mono text-gray-700">
          <button onclick="navigator.clipboard.writeText(document.getElementById('reset-link-<%= @user.id %>').value); this.textContent = 'Copied!'; setTimeout(() => this.textContent = 'Copy', 2000)"
            class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 whitespace-nowrap cursor-pointer">
            Copy
          </button>
        </div>
        <p class="text-xs text-gray-500 mt-3">Link expires in 48 hours.</p>
      </div>
    </div>
  </div>
<% end %>
