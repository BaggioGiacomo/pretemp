<section class="max-w-6xl mx-auto px-4 py-10 md:py-16">
  <div class="mb-8 md:mb-12">
    <h1 class="text-2xl md:text-3xl font-semibold tracking-tight">Archivio <%= @year %></h1>
    <p class="mt-2 text-sm text-slate-400">
      Consulta tutte le previsioni pubblicate nel <%= @year %>.
    </p>
  </div>
  <div class="grid gap-3 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    <% @forecasts.each do |forecast| %>
      <%= link_to "#", class: "group rounded-2xl border border-slate-800 bg-slate-900/80 p-5 flex items-center justify-between hover:border-sky-500/60 hover:bg-slate-900 transition" do %>
        <div>
          <p class="text-lg font-semibold text-slate-100 group-hover:text-white">Date</p>
          <p class="text-xs text-slate-500">Livello</p>
          <p class="text-xs text-slate-500">Previsore</p>
        </div>
        <span class="text-sky-400 group-hover:text-sky-300 transition">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </span>
      <% end %>
    <% end %>
  </div>
</section>
