<!-- HERO -->
<section class="relative overflow-hidden border-b border-slate-800 bg-gradient-to-b from-slate-950 via-slate-950 to-slate-900">
  <div class="pointer-events-none absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(56,189,248,.18),_transparent_55%),radial-gradient(circle_at_bottom,_rgba(250,204,21,.12),_transparent_55%)]"></div>
  <div class="relative max-w-6xl mx-auto px-4 py-12 md:py-16 grid gap-10 md:grid-cols-2 items-center">
    <!-- Left: text -->
    <div class="space-y-6">
      <p class="inline-flex items-center rounded-full border border-sky-500/40 bg-slate-950/70 px-3 py-1 text-xs font-medium text-sky-200 shadow-sm shadow-sky-500/20">
        Previsioni sperimentali probabilistiche dal 2015
      </p>
      <div class="space-y-3">
        <h1 class="text-3xl md:text-4xl font-semibold tracking-tight">
          Previsioni dedicate ai temporali intensi
        </h1>
        <p class="text-sm md:text-base text-slate-300 max-w-xl">
          PRETEMP fornisce previsioni probabilistiche del rischio di fenomeni temporaleschi intensi
          su scala nazionale, con particolare attenzione alle situazioni potenzialmente pericolose.
        </p>
      </div>
      <div class="flex flex-wrap gap-3">
        <%= link_to "Ultima previsione", "#",
            class: "inline-flex items-center justify-center rounded-xl bg-sky-500 px-4 py-2 text-sm font-medium text-slate-950 shadow-lg shadow-sky-500/30 hover:bg-sky-400 transition" %>
        <%= link_to "Come funziona la previsione", "#",
            class: "inline-flex items-center justify-center rounded-xl border border-slate-700 px-4 py-2 text-sm font-medium text-slate-100 hover:bg-slate-900 transition" %>
      </div>
      <dl class="grid grid-cols-3 gap-4 text-xs text-slate-300 max-w-md">
        <div>
          <dt class="text-slate-500">Anni di archivio</dt>
          <dd class="mt-1 text-sm font-semibold">2015–<%= Time.current.year %></dd>
        </div>
        <div>
          <dt class="text-slate-500">Focus</dt>
          <dd class="mt-1 text-sm font-semibold">Fenomeni violenti</dd>
        </div>
        <div>
          <dt class="text-slate-500">Aggiornamenti</dt>
          <dd class="mt-1 text-sm font-semibold">Quotidiani</dd>
        </div>
      </dl>
    </div>
    <!-- Right: latest forecast card -->
    <div class="md:pl-8">
      <div class="rounded-2xl border border-slate-800 bg-slate-900/80 shadow-2xl shadow-slate-950/60 p-4 md:p-5 space-y-4">
        <div class="flex items-center justify-between gap-4">
          <div>
            <p class="text-xs uppercase tracking-wide text-slate-500">Ultima previsione</p>
            <p class="text-sm font-semibold text-slate-100">
              <%= @latest_forecast&.title || "Previsione più recente" %>
            </p>
          </div>
          <span class="inline-flex items-center rounded-full bg-amber-300/10 border border-amber-400/40 px-3 py-1 text-xs font-semibold text-amber-200">
            Pericolosità: <%= @latest_forecast&.risk_level || "–" %>
          </span>
        </div>
        <p class="text-xs text-slate-300">
          Autore:
          <span class="font-medium text-slate-100">
            <%= @latest_forecast&.author || "Staff PRETEMP" %>
          </span>
        </p>
        <p class="text-xs text-slate-400 line-clamp-4">
          <%= @latest_forecast&.summary || "Sintesi della situazione convettiva prevista e delle aree a maggior rischio di fenomeni intensi." %>
        </p>
        <div class="flex items-center justify-between pt-2">
          <%= link_to "Vai alla previsione", "#",
              class: "text-xs font-medium text-sky-300 hover:text-sky-200" %>
          <p class="text-[11px] text-slate-500">
            Aggiornata il
            <%= @latest_forecast&.issued_at&.strftime("%d/%m/%Y %H:%M") || l(Time.current, format: "%d/%m/%Y") %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- LATEST FORECASTS -->
<section class="max-w-6xl mx-auto px-4 py-10 md:py-12">
  <div class="flex items-center justify-between gap-4 mb-4">
    <h2 class="text-lg md:text-xl font-semibold tracking-tight">Previsioni recenti</h2>
    <%= link_to "Vai all'archivio", "#",
        class: "text-xs font-medium text-slate-400 hover:text-slate-200" %>
  </div>
  <div class="grid gap-4 md:grid-cols-3">
    <% (@latest_forecasts || []).each do |forecast| %>
      <article class="rounded-2xl border border-slate-800 bg-slate-900/80 p-4 flex flex-col justify-between">
        <header class="space-y-1">
          <p class="text-[11px] text-slate-500">
            <%= forecast.issued_at.strftime("%A %d %B %Y") %>
          </p>
          <h3 class="text-sm font-semibold text-slate-50 line-clamp-2">
            <%= forecast.title %>
          </h3>
          <p class="text-xs text-slate-400">
            Autore: <span class="font-medium text-slate-100"><%= forecast.author %></span>
          </p>
        </header>
        <p class="mt-3 mb-4 text-xs text-slate-300 line-clamp-3">
          <%= forecast.summary %>
        </p>
        <div class="flex items-center justify-between text-xs">
          <span class="inline-flex items-center rounded-full border px-2 py-0.5 border-amber-400/40 bg-amber-300/5 text-amber-200">
            Pericolosità: <%= forecast.risk_level %>
          </span>
          <%= link_to "Dettagli", "#",
              class: "font-medium text-sky-300 hover:text-sky-200" %>
        </div>
      </article>
    <% end %>
    <% if (@latest_forecasts || []).empty? %>
      <p class="text-xs text-slate-400">
        Le previsioni verranno mostrate qui non appena disponibili.
      </p>
    <% end %>
  </div>
</section>
<!-- TOOLS / OPERATIVE AREA -->
<section class="max-w-6xl mx-auto px-4 py-4 md:py-8">
  <div class="flex items-center justify-between gap-4 mb-4">
    <h2 class="text-lg md:text-xl font-semibold tracking-tight">Area operativa</h2>
  </div>
  <div class="grid gap-4 md:grid-cols-4">
    <%= link_to "#",
        class: "group rounded-2xl border border-slate-800 bg-slate-900/80 p-4 flex flex-col justify-between hover:border-sky-500/60 hover:bg-slate-900 transition" do %>
      <div>
        <p class="text-xs font-semibold text-slate-200 mb-1">Radar</p>
        <p class="text-[11px] text-slate-400">
          Riflettività radar in tempo quasi reale per seguire l'evoluzione delle celle temporalesche.
        </p>
      </div>
      <span class="mt-3 text-[11px] font-medium text-sky-300 group-hover:text-sky-200">
        Apri radar →
      </span>
    <% end %>
    <%= link_to "#",
        class: "group rounded-2xl border border-slate-800 bg-slate-900/80 p-4 flex flex-col justify-between hover:border-sky-500/60 hover:bg-slate-900 transition" do %>
      <div>
        <p class="text-xs font-semibold text-slate-200 mb-1">Pseudosondaggi</p>
        <p class="text-[11px] text-slate-400">
          Profili verticali per valutare l'instabilità e il potenziale convettivo.
        </p>
      </div>
      <span class="mt-3 text-[11px] font-medium text-sky-300 group-hover:text-sky-200">
        Consulta pseudosondaggi →
      </span>
    <% end %>
    <%= link_to "#",
        class: "group rounded-2xl border border-slate-800 bg-slate-900/80 p-4 flex flex-col justify-between hover:border-sky-500/60 hover:bg-slate-900 transition" do %>
      <div>
        <p class="text-xs font-semibold text-slate-200 mb-1">Modelli WRF</p>
        <p class="text-[11px] text-slate-400">
          Campi previsionali ad alta risoluzione da diverse catene modellistiche.
        </p>
      </div>
      <span class="mt-3 text-[11px] font-medium text-sky-300 group-hover:text-sky-200">
        Vai ai modelli →
      </span>
    <% end %>
    <%= link_to "#",
        class: "group rounded-2xl border border-slate-800 bg-slate-900/80 p-4 flex flex-col justify-between hover:border-amber-400/60 hover:bg-slate-900 transition" do %>
      <div>
        <p class="text-xs font-semibold text-slate-200 mb-1">Segnalazioni</p>
        <p class="text-[11px] text-slate-400">
          Accedi al progetto Storm Report Italia e alle segnalazioni di fenomeni violenti.
        </p>
      </div>
      <span class="mt-3 text-[11px] font-medium text-amber-200 group-hover:text-amber-100">
        Storm Report →
      </span>
    <% end %>
  </div>
</section>
<!-- SCIENTIFIC / DIDACTIC AREA -->
